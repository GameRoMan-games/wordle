---
import "~/styles/main.css";
import "~/styles/notifications.css";
import "~/styles/statistics.css";
import "~/styles/variables.css";

import Layout from "~/layouts/Layout.astro";
import Game from "~/components/Game.tsx";

const id = "wordle";
const title = "Wordle - Daily and Unlimited Word Puzzle Game";
const canonical = `https://games.rman.dev/${id}`;
const description = `Challenge yourself with Wordle, the addictive daily word puzzle. Enjoy unlimited games or a new daily challenge. Play now on ${canonical}`;
const thumbnail = `/images/${id}.png`;
---

<Layout {title} {description} {canonical} {thumbnail}>
  <Game client:only="solid-js" />
</Layout>
